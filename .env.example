# Convex (Next.js client)
NEXT_PUBLIC_CONVEX_URL=

# Convex (CLI/deployment)
CONVEX_DEPLOYMENT=
CONVEX_URL=
CONVEX_SITE_URL=

# Clerk (Next.js)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Auth mode (Next.js)
# - clerk: normal auth via Clerk
# - demo: bypass Clerk and select a seeded user at /demo (requires Convex env ALLOW_DEMO_AUTH=1)
NEXT_PUBLIC_AUTH_MODE=clerk

# Clerk routing (Next.js)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/register

# Clerk (Convex auth config)
# This must match your Clerk instance issuer URL
CLERK_ISSUER_URL=

# Optional
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Seed
SEED_SECRET=dev_seed_secret_change_me
